<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background01"
    tools:context=".GameActivity">

    <ToggleButton
        android:id="@+id/bubble1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="invisible"
        android:onClick="OnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />
    <ToggleButton
        android:id="@+id/bubble2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:onClick="OnClick"
        app:layout_constraintBottom_toTopOf="@+id/bubble1"
        app:layout_constraintLeft_toRightOf="@id/bubble1"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:onClick="OnClick"
        app:layout_constraintBottom_toTopOf="@+id/bubble1"
        app:layout_constraintRight_toLeftOf="@id/bubble1"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:onClick="OnClick"
        app:layout_constraintBottom_toTopOf="@+id/bubble3"
        app:layout_constraintLeft_toRightOf="@id/bubble3"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:onClick="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintLeft_toRightOf="@id/bubble4"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:onClick="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintLeft_toRightOf="@id/bubble5"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:onClick="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/bubble1"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:onClick="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/bubble2"
        app:layout_constraintLeft_toRightOf="@+id/bubble7"

        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:onClick="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/bubble3"
        app:layout_constraintLeft_toRightOf="@+id/bubble8"
        android:visibility="invisible"

        />
    <ToggleButton
        android:id="@+id/bubble10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button01"
        android:fontFamily="@font/loved_by_the_king"
        android:text="10"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:onClick="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/bubble4"
        app:layout_constraintLeft_toRightOf="@+id/bubble9"
        android:visibility="invisible"

        />
    <Button
        android:id="@+id/btnPause"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:background="@drawable/pausebutton"
        android:fontFamily="@font/loved_by_the_king"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/buttonSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:text="@string/timer"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:gravity="center"
        android:background="@drawable/button01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>